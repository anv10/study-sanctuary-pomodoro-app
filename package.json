{
  "name": "pomodoro-study-tracker",
  "version": "1.0.0",
  "description": "A whimsical Pomodoro study tracking app with Studio Ghibli vibes",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["pomodoro", "study", "tracker"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
